@model Northwind.Application.Employees.Commands.Create.Command

<fieldset>
  <form method="post" asp-action="Create">
    <x-field>
      <label>Id</label>
      <input value="[New]" readonly>
    </x-field>
    <x-field>
      <label asp-for="Title"></label>
      <input asp-for="Title">
      <span asp-validation-for="Id"></span>    
    </x-field>
    <x-field>
      <label asp-for="FirstName"></label>
      <input asp-for="FirstName">
      <span asp-validation-for="FirstName"></span>    
    </x-field>
    <x-field>
      <label asp-for="LastName"></label>
      <input asp-for="LastName">
      <span asp-validation-for="LastName"></span>    
    </x-field>
    <x-field>
      <label asp-for="BirthDate"></label>
      <input asp-for="BirthDate" class="input__date" type="text">
      <span asp-validation-for="BirthDate"></span>    
    </x-field>
    <x-field>
      <label asp-for="Address"></label>
      <input asp-for="Address">
      <span asp-validation-for="Address"></span>    
    </x-field>
    <x-field>
      <label asp-for="City"></label>
      <input asp-for="City">
      <span asp-validation-for="City"></span>    
    </x-field>
    <x-field>
      <label asp-for="Region"></label>
      <input asp-for="Region">
      <span asp-validation-for="Region"></span>    
    </x-field>
    <x-field>
      <label asp-for="PostalCode"></label>
      <input asp-for="PostalCode">
      <span asp-validation-for="PostalCode"></span>    
    </x-field>
    <x-field>
      <label asp-for="Country"></label>
      <input asp-for="Country">
      <span asp-validation-for="Country"></span>    
    </x-field>
    <x-field>
      <label asp-for="HomePhone"></label>
      <input asp-for="HomePhone">
      <span asp-validation-for="HomePhone"></span>    
    </x-field>
    <x-field>
      <label asp-for="Position"></label>
      <input asp-for="Position">
      <span asp-validation-for="Position"></span>    
    </x-field>
    <x-field>
      <label asp-for="Extension"></label>
      <input asp-for="Extension">
      <span asp-validation-for="Extension"></span>    
    </x-field>
    <x-field>
      <label asp-for="HireDate"></label>
      <input asp-for="HireDate" class="input__date" type="text">
      <span asp-validation-for="HireDate"></span>    
    </x-field>
    <x-field>
      <label asp-for="Notes"></label>
      <input asp-for="Notes">
      <span asp-validation-for="Id"></span>    
    </x-field>
    <x-field>
      <button>Save</button>
    </x-field>
  </form>
</fieldset>