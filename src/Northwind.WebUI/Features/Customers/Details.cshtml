@model Details.Model

<fieldset>
  <form method="post" asp-action="Update">
    <x-field>
      <label asp-for="Id"></label>
      <input asp-for="Id">
    </x-field>
    <x-field>
      <label asp-for="CompanyName"></label>
      <input asp-for="CompanyName">
    </x-field>
    <x-field>
      <label asp-for="ContactTitle"></label>
      <input asp-for="ContactTitle">
    </x-field>
    <x-field>
      <label asp-for="ContactName"></label>
      <input asp-for="ContactName">
    </x-field>
    <x-field>
      <label asp-for="Phone"></label>
      <input asp-for="Phone">
    </x-field>
    <x-field>
      <label asp-for="Fax"></label>
      <input asp-for="Fax">
    </x-field>
    <x-field>
      <label>Role</label>
      <select name="Role">
        <option disabled selected>-- Select --</option>
        <option value="1">User</option>
        <option value="2">Super User</option>
        <option value="3">Administrator</option>
      </select>
    </x-field>
    <x-field>
      
      <label for="checkbox">
        <span class="checkable">Confirm</span>
      </label>
      
      <label>
        <input type="checkbox" id="checkbox">
        <span class="checkable"></span>
      </label>
    </x-field>
    <x-field>
      <button>Save</button>
    </x-field>
  </form>
</fieldset>